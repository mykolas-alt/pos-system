<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    
    <changeSet id="AdjustingPaymentOrderFkey" author="arturas">
        <dropNotNullConstraint 
        tableName="payment" 
        columnName="order_id" 
        columnDataType="UUID"/>
    </changeSet>
    <changeSet id="AddReservationTotalAmount " author="arturas">
        <addColumn tableName="reservation">
            <column name="total_amount" type="DECIMAL(19,2)" defaultValueNumeric="0" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="AddRservationTotalAmountToAudit" author="arturas">
        <addColumn tableName="reservation_aud">
            <column name="total_amount" type="DECIMAL(19,2)" />
        </addColumn>
    </changeSet>
</databaseChangeLog>