<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="addBusinessTable" author="mykolas">
        <createTable tableName="business">

            <column name="id" type="UUID">
                <constraints primaryKey="true" />
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" notNullConstraintName="name_not_null" />
            </column>

            <column name="owner_id" type="UUID">
                <constraints
                    nullable="true"
                    notNullConstraintName="owner_id_not_null"
                    foreignKeyName="fk_business_employee"
                    referencedTableName="employee"
                    referencedColumnNames="id" />
            </column>

            <column name="address" type="VARCHAR(255)">
                <constraints nullable="false" notNullConstraintName="address_not_null" />
            </column>

            <column name="contact_info" type="VARCHAR(255)">
                <constraints nullable="false" notNullConstraintName="contact_info_not_null" />
            </column>

        </createTable>
    </changeSet>

    <changeSet id="addBusinessType" author="mykolas">
        <addColumn tableName="business">
            <column name="type" type="VARCHAR(100)" value="CATERING">
                <constraints nullable="false" notNullConstraintName="type_not_null" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
