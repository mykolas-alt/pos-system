<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="addSoftDeletionToProducts" author="mykolas">
        <addColumn tableName="product">
            <column name="deletedat" type="TIMESTAMP" />
        </addColumn>
    </changeSet>

    <changeSet id="addSoftDeletionToProductsAud" author="mykolas">
        <addColumn tableName="product_aud">
            <column name="deletedat" type="TIMESTAMP" />
        </addColumn>
    </changeSet>
</databaseChangeLog>
