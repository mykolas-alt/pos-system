<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="addProductToBusinessRelation" author="mykolas">
        <addColumn tableName="product">
            <column name="business_id" type="UUID">
                <constraints nullable="false"
                    notNullConstraintName="business_id_not_null"
                    foreignKeyName="fk_product_business"
                    referencedTableName="business"
                    referencedColumnNames="id" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
